</html>

<script type="text/javascript">

    $(document).ready(function () {
        //Display body
        $('#home').removeAttr('style');
        $('#body').removeAttr('style');
        //Display side bar menu
        if ($('#sideBarSectionSmall').length) {
            $('#sideBarSectionSmall').removeAttr('style');
        }
        if ($('#sideBarSectionLarge').length) {
            $('#sideBarSectionLarge').removeAttr('style');
        }

        //Check style of sideBar
        if ($('body').hasClass('sidebar-collapse')) {
            $('.main-sidebar a').attr("tabindex", "-1");
        } else {
            $('.main-sidebar-small a').attr("tabindex", "-1");
        }
    });

    $(document).off('a.sidebar-toggle i');
    $(document).on('click', 'a.sidebar-toggle i', function () {
        var param = '';
        if ($(this).attr('id') === 'active-sidebar-menu') {
            param = { dataType: 'sidebar-collapse' };

            //Set all anchor tabindex of large sidebar to -1
            $('.main-sidebar a').attr("tabindex", "-1");
            $('.main-sidebar-small a').removeAttr("tabindex");
            $('body').removeClass('sidebar-collapse').addClass('sidebar-collapse');

        } else {
            param = { dataType: '' };

            //Set all anchor tabindex of small sidebar to -1
            $('.main-sidebar-small a').attr("tabindex", "-1");
            $('.main-sidebar a').removeAttr("tabindex");
            $('body').removeClass('sidebar-collapse').addClass('');
        }
    });


