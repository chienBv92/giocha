<body>
    <div class="container" style="width:80%">
        @RenderPage("~/Views/Shared/Header.cshtml")

        @RenderPage("~/Views/Shared/Menu.cshtml")
        <div class="row nomargin" style="background-color:#ffffff;">
            <div class="col-md-3 col-sm-4 hidden-xs nopadding" valign="top">
                @RenderPage("~/Views/Shared/BodyLeft.cshtml")
            </div>
            <div class="col-md-9 col-sm-8 col-xs-12 align-center" valign="top">
                @RenderBody()
            </div>
        </div>

        <div class="row nomargin" style="background-color: #FFFFFF; padding-top:15px;">
