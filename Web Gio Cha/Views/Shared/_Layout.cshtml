                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 linkfooter" align="right" style="line-height: 32px; height:32px; background-image: url(Images/bgfooter2.jpg); background-repeat:no-repeat; background-repeat:no-repeat; background-size:100% 100%; color:#FFF">
                        <a href="#">Trang chủ</a> | <a href="#">Giới thiệu</a> |	<a href="#">Tin tức</a> |     <a href="#">Sản phẩm</a> | 	  <a href="#">Trợ giúp</a> |	 <a href="#">Liên hệ</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 linkfooter" align="center" valign="middle" style="border-bottom:1px solid #CCC; border-left:1px solid #CCC; border-right:1px solid #CCC"><a href="#"><img src="Images/huongdanthanhtoan.jpg" style="width:60%; height:auto" /></a></div>
                </div>
            </div>
        </div>
        <div class="row nomargin" style="background-color: #FFFFFF">
            <div class="col-md-12 col-sm-12 col-xs-12" align="center" style="height:18px; background-image:url(Images/bgfooter.jpg); background-size:100% 100%; background-position: center; background-repeat:no-repeat"></div>
        </div>

        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td bgcolor="#FFFFFF">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr></tr>
                    </table>
                </td>
            </tr>
        </table>
        @RenderPage("~/Views/Shared/Footer.cshtml")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
