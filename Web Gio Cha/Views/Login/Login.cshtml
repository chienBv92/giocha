@using Web_Gio_Cha.Resources;
@using Web_Gio_Cha.Models
@model LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12" align="center" valign="top">
    <h2>@ViewBag.Title</h2>
    <div class="col-md-12">
        @if (ViewBag.confirmPasswordSuccess != null)
        {
            <div class="col-md-12" style="margin-bottom:10px; text-align:center"><span style="color:red">@ViewBag.confirmPasswordSuccess</span></div>
        }
        @if (ViewBag.confirmEmailSuccess != null)
        {
            <div class="col-md-12" style="margin-bottom:10px; text-align:center"><span style="color:red">@ViewBag.confirmEmailSuccess</span></div>
        }
        <div style="margin-top:15px"> <span class="mesLoginRequire" style="color:red">@AdminLabel.MessessLogin</span></div>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div>
                    <div class="col-md-2 leftRigist">
                    </div>

                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="col-md-4 col-sm-6 col-xs-6 col-xs-12">
                                @Html.Label("Email:", new { @class = "lblTitle" })
                            </div>
                            <div class="col-md-8 col-sm-6 col-xs-6 col-xs-12">
                                @Html.TextBoxFor(m => m.USER_EMAIL, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.USER_EMAIL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-6 col-xs-6 col-xs-12">
                                @Html.Label("Mật khẩu:", new { @class = "lblTitle" })
                            </div>
                            <div class="col-md-8 col-sm-6 col-xs-6 col-xs-12">
                                @Html.PasswordFor(m => m.USER_PASSWORD, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.USER_PASSWORD, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đăng nhập" class="btn btn-default" />
                            </div>
                        </div>
                        <p>
                            <span>Bạn chưa có tài khoản?</span><a href="/dang-ky"> Đăng ký</a>
                        </p>
                        <p>
                            <a href="/quen-mat-khau">Quên mật khẩu?</a>
                        </p>
                    </div>

                    <div class="col-md-2 rightRigist">
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
